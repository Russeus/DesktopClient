  <Product Id="73B7E1DF-F320-4EF0-9275-164BF5546F08" 
           UpgradeCode="28790c06-b713-430c-9c96-e6bc5c34d534"
           Name = "VALTracker (Machine - MSI)"
           Version="0.0.2.0"
