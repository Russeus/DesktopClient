              <RegistryValue Name="ModifyPath" Type="expandable" Value="MsiExec.exe /I {73B7E1DF-F320-4EF0-9275-164BF5546F08}" KeyPath="yes"/>
            </RegistryKey>
          </Component>
          <Component Id="UninstallString" Guid="70bf96a1-dd3f-48a5-8d2f-c87e693c586f" Win64="no">
