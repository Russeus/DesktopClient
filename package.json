{
  "name": "valtracker",
  "productName": "VALTracker",
  "version": "0.9.0-alpha",
  "description": "VALTracker is a tool for checking your Matches and Personal Store for the game VALORANT.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "pack": "electron-builder --dir",
    "publish": "electron-builder --win -p always"
  },
  "build": {
    "files": [
      "!README.md",
      "!.gitingore"
    ],
    "appId": "VALTracker",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "iconss/VALTracker_Logo_default.ico"
    },
    "nsis": {
      "installerIcon": "iconss/VALTracker_Logo_default.ico",
      "uninstallerIcon": "iconss/VALTracker_Logo_default.ico",
      "uninstallDisplayName": "VALTracker",
      "license": "license.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "VALTracker",
        "repo": "DesktopClient"
      }
    ]
  },
  "author": "Spirit",
  "repository": "https://github.com/VALTracker/DesktopClient",
  "license": "MIT",
  "devDependencies": {
    "ansi-regex": "^6.0.1",
    "electron": "^18.0.2",
    "electron-builder": "^22.5.1"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "chokidar": "^3.5.3",
    "compare-versions": "^4.1.3",
    "discord-rpc": "^4.0.1",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.6.5",
    "fetch": "^1.1.0",
    "fetch-cookie": "^2.0.3",
    "follow-redirects": ">=1.14.9",
    "https": "^1.0.0",
    "jquery": ">=3.6.0",
    "moment": "^2.29.2",
    "node-fetch": "^3.2.3",
    "showdown": "^2.0.3",
    "ws": "^8.5.0"
  }
}
